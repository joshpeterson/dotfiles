[user]
	name = Josh Peterson
	email = josh@modular.com
[diff]
	compactionHeuristic = true
	tool = diffview
	colorMoved = default
[interactive]
    	diffFilter = delta --color-only
[core]
	editor = nvim
	excludesfile = ~/.gitignore_global
	pager = delta
[alias]
	co = checkout
	br = branch
	ci = commit
	st = status
  local-branches = !git branch -vv | cut -c 3- | awk '$3 !~/\\[/ { print $1 }'
  merged-branches = !git branch --merged master | grep -v master
[push]
	default = current
[fetch]
	prune = true
[pull]
	rebase = true
[init]
	defaultBranch = main
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[difftool "diffview"]
	cmd = nvim -d "$LOCAL" "$REMOTE"
[merge]
	conflictstyle = diff3
	tool = diffview
[mergetool "diffview"]
	cmd = nvim -n -c "DiffviewOpen" "$MERGE"
[remote "origin"]
	prune = true
[delta]
    	navigate = true    # use n and N to move between diff sections
	line-numbers = true
	side-by-side = true
[mergetool]
	keepBackup = false
[difftool]
	prompt = false
[submodule]
	recurse = true
